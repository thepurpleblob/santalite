{{> header }}

<h2 class="page-title"><i class="fas fa-calendar-alt"></i> Choose your Santa Steam Train...</h2>

<p class="alert alert-info"><i class="fas fa-info-circle"></i> Click an available time on the day you want to travel.</p>

{{> formerrors }}

{{# structure }}
    <div class="row">
        {{# days }}
            <div class="col">
            	<div class="island bg-warning">
                    <div class="island-header">
                        <center><h3>{{ date }}</h3></center>
                    </div>
                    <div class="island-body">
                        {{# times }}
                            {{# available }}
	                            <form method="post" action="{{# path }}booking/date{{/ path }}">
	                                <input type="hidden" name="dateid" value="{{ dateid }}">
	                                <input type="hidden" name="timeid" value="{{ timeid }}">
		                            <button class="btn btn-block btn-info">
		                                <span class="ridetime"><i class="far fa-clock"></i> {{ time }}</span>
		                                <span class="availability">{{ message }}</span>
		                            </button>
	                            </form>
                            {{/ available }}
                            {{^ available }}
	                            <button class="btn btn-block btn-secondary" disabled>
	                                <span class="ridetime"><i class="far fa-clock"></i> {{ time }}</span>
	                                <span class="availability">Sold out!</span>
	                            </button>
                            {{/ available }}
                        {{/ times }}
                    </div>
                </div>
            </div>
        {{/ days }}
    </div>	
{{/ structure }}

<div class="clearfix"></div>

<form action="{{# path }}booking/numbers{{/ path }}">
    <div class="submitbuttons">
        <button name="cancel" value="cancel" class="cancelbutton btn btn-warning btn-lg"><i class="fas fa-redo"></i> Go back</button>
    </div>
</form>

{{> footer }}
